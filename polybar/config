[colors]
transparent                   = #00000000
foreground                    = #f5f5f5
background                    = #393e48
foreground-dim                = #979eab
background-dim                = #282c34
alert                         = #DAD9D4
highlight                     = #61afef
purple                        = #e06c75
urgent                        = #ff0000
moderate                      = #e5c07b

[settings]
screenchange-reload           = true
pseudo-transparency           = true
wm-restack                    = bspwm
override-redirect             = true

[global/wm]
margin-top                    = 0
margin-bottom                 = 0

####################################

## BASE
[bar/base]
monitor                       = ${env:MONITOR}
locale                        = en_US.UTF-8
dpi                           = 96
# bottom                        = true
height                        = 18
offset-y                      = 8

# fonts and colors
font-0                        = JetBrains Mono:style=Regular:size=10;2
font-1                        = Material Icons:style=Regular:size=10;2
background                    = ${colors.transparent}
foreground                    = ${colors.foreground}

##  LEFT
[bar/left]
inherit                       = bar/base
height                        = 20
width                         = 150
offset-x                      = 6

# fixed-center                  = true
modules-left                  = bspwm

## RIGHT
[bar/right]
inherit                       = bar/base
width                         = 150
offset-x                      = 100%:-170

fixed-center                  = true
modules-right                 = date

[bar/center]
inherit                       = bar/base
width                         = 60%
offset-x                      = 350

fixed-center                  = true

[bar/center-1]
inherit                       = bar/center
modules-center                = windowlist-1

[bar/center-2]
inherit                       = bar/center
modules-center                = windowlist-2

[bar/center-3]
inherit                       = bar/center
modules-center                = windowlist-3

#########################################################

## MODULES
[module/windowlist]
type = custom/script

tail = true
interval = 0

; cycle between windows
click-left = bspc node -f next.local
click-right = bspc node -f prev.local

format = <label>
format-background = #282c34
format-foreground = ${colors.alert}
format-padding = 4

[module/windowlist-1]
inherit = module/windowlist

exec = cat /home/YOUR_USERNAME/.config/bspwm/current_windows_1.txt

[module/windowlist-2]
inherit = module/windowlist

exec = cat /home/YOUR_USERNAME/.config/bspwm/current_windows_2.txt

[module/windowlist-3]
inherit = module/windowlist

exec = cat /home/YOUR_USERNAME/.config/bspwm/current_windows_3.txt

#############

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = false

format = <label-state>  %{F#979eab}<label-mode>%{F-}
label-monitor = %name%
label-mode-padding = 1
label-mode-foreground = #000
label-focused = %icon% %name%
label-focused-padding = 1
label-occupied = %icon% %name%
label-occupied-padding = 1
label-urgent = %icon% %name%
label-urgent-padding = 1
label-empty = %icon% %name%
label-empty-padding = 1

label-dimmed-foreground = ${colors.foreground-dim}
label-dimmed-underline = ${colors.highlight}
label-dimmed-focused-foreground = ${colors.highlight}

label-focused-foreground = ${colors.highlight}
label-focused-underline = ${colors.highlight}

label-occupied-underline = ${colors.background-dim}
label-urgent-foreground = ${colors.urgent}
label-urgent-underline = ${colors.urgent}

label-monocle =  M
label-tiled = T
label-fullscreen = FF
label-floating = F
label-pseudotiled = P
label-locked = L
label-sticky = S
label-private = P
label-sticky-foreground = ${colors.purple}
label-locked-foreground = ${colors.moderate}
label-private-foreground = ${colors.urgent}

[module/date]
type                          = internal/date
interval                      = 5
date                          = "%d-%m"
date-alt                      = "%A %d %b"
time                          = %H:%M
time-alt                      = %H:%M
label                         = %time% | %date%
